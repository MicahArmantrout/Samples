@model HelloWorld4.Models.MyFormData

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using(Html.BeginForm())
        {
            <fieldset>
                <!-- LabelFor renders a label for a form field, drawn from the property's name... -->
                @Html.LabelFor(model => model.Name)
                <br />
                <!-- TextBoxFor renders a textbox bound to the specified property of the model -->
                @Html.TextBoxFor(model => model.Name)
                <br/>
                @Html.LabelFor(model => model.IsTrue)
                <br />
                <!-- CheckBoxFor renders a checkbox bound to the specified bool property of the model -->
                @Html.CheckBoxFor(model => model.IsTrue)
                <br />
                @Html.LabelFor(model => model.SomeValue)
                <br />
                <!-- DropDownListFor renders a drop down list bound to the specified property of the model, and populates with the accompanying selection list -->
                @Html.DropDownListFor(model => model.SomeValue, HelloWorld4.Models.MyFormData.Numbers)
                <br />
                <input type="submit" value="Submit my form" />
            </fieldset>
        }
    </div>
</body>
</html>
